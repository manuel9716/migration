USE usuarios

CREATE PROCEDURE SP_I_USUARIOS_01
@Id INT,
@nombre VARCHAR(100),
@apellido VARCHAR(100),
@telefono VARCHAR(100),
@correo VARCHAR(100)
AS
BEGIN
	INSERT INTO usuarios
	(nombre, apellido, telefono, correo)
	VALUES
	(@nombre, @apellido, @telefono, @correo)

	SELECT * FROM usuarios
END

CREATE PROCEDURE SP_U_USUARIOS_01
@Id INT,
@nombre VARCHAR(100),
@apellido VARCHAR(100),
@telefono VARCHAR(100),
@correo VARCHAR(100)
AS
BEGIN
	UPDATE usuarios
    SET
	    nombre = @nombre,
        apellido = @apellido,
        telefono = @telefono,
        correo = @correo
	WHERE
        Id = @Id
	SELECT * FROM usuarios
END

CREATE PROCEDURE SP_L_USUARIOS_01

AS
BEGIN
	SELECT * FROM usuarios
END
